<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mist.ac.bd.diabatesepredicotor.TestResult"
    tools:showIn="@layout/app_bar_test_result">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="70dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_centerInParent="true"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/roundtextbox"
                android:layout_weight="0.43">
                <TextView
                    android:id="@+id/prediction_says_text_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Result:"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/roundtextbox"
                    android:textColor="#00000F"/>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/roundtextbox"
                    android:textColor="#00000F"
                    android:textSize="25sp"
                    android:layout_below="@+id/prediction_says_text_box"
                    android:text="@string/high_probability"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/roundtextbox">
                <TextView
                    android:id="@+id/Suggestion_text_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggestion:"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/roundtextbox"
                    android:textColor="#00000F"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_below="@+id/Suggestion_text_box"
                    android:background="@drawable/roundtextbox"
                    android:textColor="#00000F"
                    android:textSize="25sp"
                    android:text="@string/suggestion"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textColor="#FFF"
            android:background="@drawable/roundbutton"
            android:text="English"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:layout_margin="2dp"
            android:background="@drawable/roundbutton"
            android:text="Bangla"/>

    </LinearLayout>

</RelativeLayout>
